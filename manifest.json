{
  "manifest_version": 3,
  "name": "EventerNote Plus",
  "version": "1.0.0",
  "description": "为 EventerNote 提供全新的现代化UI界面和高级搜索功能",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.eventernote.com/*",
    "http://www.eventernote.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.eventernote.com/*",
        "http://www.eventernote.com/*"
      ],
      "js": ["dist/scripts/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/scripts/*",
        "inject.js"
      ],
      "matches": [
        "https://www.eventernote.com/*",
        "http://www.eventernote.com/*"
      ]
    }
  ]
}
